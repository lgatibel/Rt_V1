


t_object			*set_plan(void)
{
	t_plan		*plan;
	t_object	*object;

	if (!(object = (t_object *)malloc(sizeof(t_object))))
		error(MALLOC, __LINE__ - 1, __FILE__, EXIT);
	if(!(plan = (t_plan *)malloc(sizeof(t_plan))))
		error(MALLOC, __LINE__ - 1, __FILE__, EXIT);
	plan->x = 0;
	plan->y = 0;
	plan->z = 0;
	object->type = PLAN;
	object->color = YELLOW;
	object->ptr = plan;
	object->next = NULL;
	return (object);
}

